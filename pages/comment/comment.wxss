/* pages/comment/comment.wxss */
/* 顶部 */

.top {
    width: 100vw;
    height: 80rpx;
    padding: 0 20rpx;
    line-height: 80rpx;
    font-size: 34rpx;
    position: relative;
  }
  
  .top-text {
    float: left;
  }
  
  /* 下拉框 */
  
  .top-selected {
    width: 53%;
    display: flex;
    float: right;
    align-items: center;
    justify-content: space-between;
    background-color: cadetblue;
    padding: 0 10rpx;
    font-size: 30rpx;
  }
  
  /* 下拉内容 */
  
  .select_box {
    background-color: #fff;
    padding: 0 20rpx;
    width: 50%;
    float: right;
    position: absolute;
    top: 80rpx;
    right: 5rpx;
    z-index: 50;
    overflow: hidden;
    text-align: left; 
    font-size: 30rpx;
    background-color: gray;
  }
  
  .select_one {
    padding-left: 20rpx;
    width: 100%;
    height: 60rpx;
    position: relative;
    line-height: 60rpx;
    
  }
  
  /* 下拉过度效果 */
  
  @keyframes myfirst {
    from {
      height: 0rpx;
    }
  
    to {
      height: 210rpx;
    }
  }

