      justify-content: space-around;
      align-items: center;
      margin-top: 20rpx;
      border-bottom: 1px solid #ccc;

  }

  .tubiao image{
      width: 60rpx;
      height: 60rpx;
  }

  .tubiao view{
      width: 33%;
      text-align: center;
  }
  .tubiao text{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    color: gray;
  }

